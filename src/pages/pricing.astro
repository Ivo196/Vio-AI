---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Pricing',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Pricing"
    title="Pricing for Every Journey"
    subtitle="Choose the perfect plan that aligns with your goals."
  />

  <!-- Pricing Widget ******************* -->

  <Prices
    title="Our prices"
    subtitle="Only pay for what you need"
    prices={[
      {
        title: 'basic',
        subtitle: 'Optimal choice for personal use',
        price: 200,
        period: 'one time',
        items: [
          {
            description: 'Custom landing page design',
          },
          {
            description: 'Basic AI-driven analytics',
          },
          {
            description: 'Standard SEO optimization',
          },
          {
            description: 'Email support',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get started',
          href: 'https://x.com/VioAI2024',
        },
      },
      {
        title: 'standard',
        subtitle: 'Optimal choice for small teams',
        price: 300,
        period: 'Per Month',
        items: [
          {
            description: 'Everything in Basic, plus:',
          },
          {
            description: 'AI-driven insights and automation',
          },
          {
            description: 'Advanced SEO optimization',
          },
          {
            description: 'Bi-weekly performance report',
          },
          {
            description: 'Priority email support',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get started',
          href: 'https://x.com/VioAI2024',
        },
        hasRibbon: true,
        ribbonTitle: 'popular',
      },
      {
        title: 'premium',
        subtitle: 'Optimal choice for companies',
        price: 500,
        period: 'One Time',
        items: [
          {
            description: 'Everything in Standard, plus:',
          },
          {
            description: 'Comprehensive marketing strategy',
          },
          {
            description: 'Full website deployment and maintenance',
          },
          {
            description: 'Weekly performance report',
          },
          {
            description: 'Dedicated account manager',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get started',
          href: 'https://x.com/VioAI2024',
        },
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Price-related features"
    subtitle="Discover the advantages of choosing our plans"
    columns={2}
    items={[
      {
        title: 'Flexible Pricing Plans',
        description: 'Choose from a variety of pricing plans tailored to fit different budgets and business needs.',
        icon: 'tabler:currency-dollar',
      },
      {
        title: 'Transparent Pricing',
        description: 'Clearly displayed pricing details for each plan, ensuring no hidden costs or unexpected charges.',
        icon: 'tabler:eye',
      },
      {
        title: 'Secure Payment Methods',
        description: 'Utilize secure payment gateways to protect your financial information during transactions.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Instant Plan Activation',
        description: `Gain immediate access to all features and benefits of your selected plan upon subscription.`,
        icon: 'tabler:clock-star',
      },
      {
        title: 'Upgrade Options',
        description: 'Easily upgrade to higher-tier plans to unlock additional features and enhance your experience.',
        icon: 'tabler:arrow-up-circle',
      },
      {
        title: '24/7 Customer Support',
        description: 'Get your questions answered via live chat, email, or phone support, available 24/7.',
        icon: 'tabler:headphones',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="A Guided Journey from Vision to Success"
    tagline="Simplified Process"
    isReversed={true}
    items={[
      {
        title: 'Step 1: Initial Consultation',
        description: 'We start with a detailed meeting to understand your business goals and design preferences.',
        icon: 'tabler:number-1',
      },
      {
        title: 'Step 2: Plan Selection',
        description: 'Choose the plan that best fits your needs from our range of customizable options.',
        icon: 'tabler:number-2',
      },
      {
        title: 'Step 3: Sign Up / Log In',
        description: 'Create an account or log in to your existing account to get started.',
        icon: 'tabler:number-3',
      },
      {
        title: 'Step 4: Review and Customize',
        description: 'Review your selected services and customize them to meet your specific requirements.',
        icon: 'tabler:number-4',
      },
      {
        title: 'Step 5: Enter Payment Details',
        description: 'Securely enter your payment details to proceed with the order.',
        icon: 'tabler:number-5',
      },
      {
        title: 'Step 6: Confirmation',
        description: 'Receive confirmation of your order and detailed next steps.',
        icon: 'tabler:number-6',
      },
      {
        title: 'Step 7: Implementation and Launch',
        description: 'Our team gets to work on building and launching your custom landing page and marketing strategy.',
        icon: 'tabler:number-7',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1536816579748-4ecb3f03d72a?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image',
    }}
  />

